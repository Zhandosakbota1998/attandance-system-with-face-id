<p id="notice"><%= notice %></p>

<h1>Group: <%= link_to @group.name, @group %>, Subjects:</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Show', [@group,subject] %></td>
        <td><%= link_to 'Edit', [:edit, @group, subject] %></td>
        <td><%= link_to 'Destroy', [@group,subject], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_group_subject_path %>
